import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "about us";

const items = [
  {
    title: "Satisfaction Assurance",
    icon: "üõ°Ô∏è",
    text: "The company assures that the product you buy from us, will give you maximum satisfaction with the application, appearance and performance property.",
  },
  {
    title: "Weather Protection",
    icon: "‚òÄÔ∏è",
    text: "Duerow Paints products has a tough surface that guards againts damage from sunlight, moisture, stain and dirt. It is ideal for application in cold climates also.",
  },
  {
    title: "Dirt & Water Resistant",
    icon: "üíß",
    text: "Duerow Paints are formulated to resist both dirt and water that can cause discoloration in the paint film, making it easier to wash off and keep clean.",
  },
  {
    title: "LOW VOC",
    icon: "üåø",
