---
import { Icon } from "astro-icon/components";
import BaseLayout from "../layouts/BaseLayout.astro";
import Slider1 from "../components/Slider1.jsx";
const pageTitle = "duerow paint";

const items = [
  {
    title: "Satisfaction Assurance",
    icon: "üõ°Ô∏è",
    text: "The company assures that the product you buy from us, will give you maximum satisfaction with the application, appearance and performance property.",
  },
  {
    title: "Weather Protection",
    icon: "‚òÄÔ∏è",
    text: "Duerow Paints products has a tough surface that guards againts damage from sunlight, moisture, stain and dirt. It is ideal for application in cold climates also.",
  },
  {
    title: "Dirt & Water Resistant",
    icon: "üíß",
    text: "Duerow Paints are formulated to resist both dirt and water that can cause discoloration in the paint film, making it easier to wash off and keep clean.",
  },
  {
    title: "LOW VOC",
    icon: "üåø",
    text: "In the past, low-VOW products were perceived as less durable paints. Today, Duerow Paints offers low-VOW products that are better than the quality & performance of higher VOC finishes.",
  },
  {
    title: "Moisture Resistant",
    icon: "üè†",
    text: "The extra protective of Duerow Paints makes it harder for water to penetrate, making it an ideal choice especially for kitchens, bathrooms and exteriors.",
  },
  {
    title: "Easy To Clean",
    icon: "üßº",
    text: "Duerow Paints resist penetration by common household stains, so spills and marks-whether from cooking or kids are easier to wipe off and clean.",
  },
];
---

<BaseLayout pageTitle={pageTitle}>
  <Slider1 client:only />
  <!-- First Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4 md:px-6 max-w-6xl">
      <div class="flex flex-col lg:flex-row gap-12 lg:gap-16 items-center">
        <!-- Text Section -->
        <div class="lg:w-1/2 space-y-8">
          <div class="flex flex-col gap-6">
            <span
              class="inline-block px-4 py-1.5 bg-blue-50 text-[#41a4c3] rounded-full text-sm font-semibold tracking-wide w-fit shadow-sm"
            >
              Since 2007
            </span>

            <p class="text-gray-600 text-lg leading-relaxed">
              Duerow Colors Private Limited was established in 2007 and has been
              manufacturing high-quality
              <span class="font-semibold text-gray-800"
                >paints, primers, putty, cement-based paints, tile grout,
                adhesive, and epoxy coatings</span
              >. Since <span class="font-semibold text-gray-800"
                >April 25, 2018</span
              >, we have been in technical collaboration with
              <span class="font-semibold text-[#41a4c3]"
                >Regent Paints Inc., USA</span
              >.
            </p>
          </div>

          <div class="space-y-6">
            <div
              class="flex items-start gap-4 p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100"
            >
              <div class="flex-shrink-0 mt-1 p-1.5 bg-blue-50 rounded-lg">
                <svg
                  class="w-5 h-5 text-[#41a4c3]"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-900 text-lg">
                  Technology & Guidance
                </h3>
                <p class="text-gray-600 mt-1">
                  Regent Paints Inc. guides Duerow Colors in <span
                    class="font-semibold text-gray-800"
                    >formulation, technology upgrades, and marketing</span
                  >.
                </p>
              </div>
            </div>

            <div
              class="flex items-start gap-4 p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100"
            >
              <div class="flex-shrink-0 mt-1 p-1.5 bg-blue-50 rounded-lg">
                <svg
                  class="w-5 h-5 text-[#41a4c3]"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-900 text-lg">
                  Authorized Partner
                </h3>
                <p class="text-gray-600 mt-1">
                  Duerow Colors Pvt. Ltd. is authorized to <span
                    class="font-semibold text-gray-800"
                    >repackage and relabel Regent Paints products</span
                  > for distribution.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Image Section -->
        <div class="lg:w-1/2">
          <div class="relative group">
            <div
              class="absolute -inset-3 bg-gradient-to-r from-blue-50 to-blue-100 rounded-2xl rotate-1 group-hover:rotate-2 transition-transform duration-500 opacity-80 group-hover:opacity-100"
            >
            </div>
            <img
              alt="Paint Factory"
              src="/images/paint_man.webp"
              width="600"
              height="400"
              decoding="async"
              class="relative rounded-xl shadow-xl w-full h-auto object-cover transform group-hover:-translate-y-1 transition-transform duration-500"
              loading="lazy"
            />
            <div
              class="absolute -bottom-5 -right-5 bg-white px-5 py-3 rounded-xl shadow-lg border border-gray-100 group-hover:scale-105 transition-transform duration-300"
            >
              <div class="flex items-center gap-2">
                <div class="p-1.5 bg-blue-50 rounded-lg">
                  <svg
                    class="w-4 h-4 text-[#41a4c3]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <p class="text-sm font-semibold text-[#41a4c3]">
                  Technical Collaboration Since 2018
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Second Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="text-center mb-16">
        <h1
          class="font-bold text-gray-800 lg:text-4xl text-3xl uppercase tracking-wide mb-4"
        >
          Why People Choose Us
        </h1>
        <div class="w-20 h-1 bg-[#41a4c3] mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          items.map((item) => (
            <div class="relative bg-white rounded-xl p-8 flex flex-col h-full transition-all duration-300 hover:shadow-xl border border-gray-100 hover:border-[#41a4c3]/30 group overflow-hidden">
              {/* Hover effect background */}
              <div class="absolute inset-0 bg-gradient-to-br from-white to-[#f0f9fb] opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-0" />

              {/* Content */}
              <div class="relative z-10 flex flex-col h-full">
                {/* Icon */}
                <div class="text-5xl text-[#41a4c3] mb-4 transition-transform duration-300 group-hover:scale-110">
                  {item.icon}
                </div>

                {/* Title */}
                <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-[#41a4c3] transition-colors duration-300">
                  {item.title}
                </h3>

                {/* Divider */}
                <div class="w-12 h-1 bg-[#41a4c3] mb-4 rounded-full" />

                {/* Text */}
                <p class="text-gray-600 flex-grow">{item.text}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
