---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "products";

const products = [
  {
    title: "Paints",
    desc: "Durable and weather-resistant coatings for interior and exterior surfaces.",
    img: "/images/products/paint.png",
  },
  {
    title: "Primers",
    desc: "Enhances adhesion of paint to surfaces, increasing durability.",
    img: "/images/products/primers.avif",
  },
  {
    title: "Putty",
    desc: "Smooths and levels surfaces before painting for a perfect finish.",
    img: "/images/products/putty.png",
  },
  {
    title: "Tile Grout",
    desc: "Used to fill gaps between tiles for a clean, uniform look.",
    img: "/images/products/grout.jpg",
  },
  {
    title: "Adhesives",
    desc: "Strong bonding agents used in construction and repairs.",
    img: "/images/products/adhesives.jpg",
  },
  {
    title: "Epoxy Coatings",
    desc: "Highly durable protective coatings with chemical resistance.",
    img: "/images/products/epoxy.webp",
  },
];
---

<style>
  .animate-gradient-shift {
    animation: gradientShift 8s ease infinite;
    background-size: 200% 200%;
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-bounce {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-20px) translateX(-50%);
    }
    60% {
      transform: translateY(-10px) translateX(-50%);
    }
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <!-- Hero Section -->
  <section
    class="relative flex flex-col items-center justify-center z-30 bg-no-repeat bg-center bg-cover w-full min-h-[300px] sm:min-h-[400px] lg:min-h-[620px] overflow-hidden"
    style="background-image: url('/images/paint_bg.jpg');"
  >
    <!-- Animated gradient overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/70 animate-gradient-shift"
    >
    </div>

    <!-- Content container with smooth entrance animation -->
    <div class="relative px-4 sm:px-6 lg:px-12 text-center animate-fade-in-up">
      <h1
        class="text-white text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight mb-6"
        style="text-shadow: 0 2px 10px rgba(0,0,0,0.3);"
      >
        <span
          class="inline-block transform transition-all duration-500 hover:scale-105"
        >
          Products <span class="text-[#41a4c3]">Duerow</span>
        </span>
      </h1>

      <p
        class="max-w-2xl mx-auto text-white/90 text-lg sm:text-xl lg:text-2xl mb-8 font-light"
      >
        Crafting premium colors since 2007 with American excellence
      </p>

      <!-- Breadcrumbs with improved interaction -->
      <nav aria-label="Breadcrumb">
        <ol
          class="flex flex-wrap justify-center items-center gap-2 text-white text-base sm:text-lg"
        >
          <li
            class="relative flex items-center after:content-['/'] after:mx-2 after:opacity-50 after:text-sm"
          >
            <a
              href="/"
              class="hover:text-[#41a4c3] transition-colors duration-300 flex items-center group"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-1 group-hover:translate-x-0.5 transition-transform"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
              </svg>
              Home
            </a>
          </li>
          <li class="text-[#41a4c3] font-medium flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 mr-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            Products
          </li>
        </ol>
      </nav>
    </div>

    <!-- Decorative elements -->
    <div
      class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-black/30 to-transparent"
    >
    </div>

    <!-- Scroll indicator -->
    <div
      class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
    >
      <svg
        class="h-6 w-6 lg:w-8 lg:h-8 text-white/80"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Product Grid -->
  <section class="bg-gray-50 py-20 px-4 sm:px-6 lg:px-8 text-gray-800">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Our Products
        </h2>
        <p class="max-w-2xl mx-auto text-lg text-gray-600">
          Discover our high-quality solutions designed for your needs
        </p>
      </div>

      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          products.map((product) => (
            <div class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-100 hover:border-[#41a4c3]/20">
              <div class="relative overflow-hidden aspect-[4/3]">
                <img
                  src={product.img}
                  alt={product.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                  onerror="this.src='/images/products/fallback.jpg'"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#41a4c3] transition-colors">
                  {product.title}
                </h3>
                <p class="text-gray-600 leading-relaxed">{product.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
